<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/cre_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Add"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="50dp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"

            />

        <TextView
            android:id="@+id/add_jobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:text="Job Title:" />

        <EditText
            android:id="@+id/edt_jobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Enter job title here"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/add_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="Job Description:" />

        <EditText
            android:id="@+id/edt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="Enter job description here"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/add_qulification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="Qualification:" />

        <EditText
            android:id="@+id/edt_qualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Enter qualification here"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/add_expe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="Experience:" />

        <EditText
            android:id="@+id/edt_expe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Enter experience here"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/cv_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="Experience:" />

        <Button
            android:id="@+id/btn_cv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Choose File"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_preset_cv"/>


        <Button
            android:id="@+id/btn_create_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Ad"
            android:background="@drawable/button_preset"
            android:layout_marginTop="16dp"
            />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/white"
            android:background="@drawable/button_cancel"
            android:textSize="20sp"
            android:layout_marginTop="16dp"

            />

    </LinearLayout>
</ScrollView>