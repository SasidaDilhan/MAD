<?xml version="1.0" encoding="utf-8"?>




<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.company.Company_Profile"

    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bussiness_name"
        android:textSize="40sp"
        android:id="@+id/busi_title"
        android:textColor="@color/title"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />


    <Button
        android:layout_width="349dp"
        android:layout_height="155dp"
        android:layout_below="@+id/busi_title"
        android:layout_centerHorizontal="true"
        android:background="@drawable/big_button"
        android:layout_marginTop="40dp"
        android:id="@+id/create"
        android:text="@string/create_add"
        android:textSize="30sp"
        />
    <Button
        android:layout_width="349dp"
        android:layout_height="155dp"
        android:layout_below="@+id/create"
        android:layout_centerHorizontal="true"
        android:background="@drawable/big_button"
        android:layout_marginTop="30dp"
        android:id="@+id/AddView"
        android:text="@string/view_adds"
        android:textSize="30sp"
        />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/button_preset"
    android:layout_below="@id/AddView"
    android:layout_marginTop="20dp"
    android:text="logout"
    android:id="@+id/btnLogout"
    />





</RelativeLayout>