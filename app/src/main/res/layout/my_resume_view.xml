<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="Resume"
        android:textSize="24sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="profile_pic_description"
            android:src="@drawable/profile_pic" />

        <TextView
            android:id="@+id/fullNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginVertical="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@id/profileImage"
            android:fontFamily="monospace"
            android:padding="8dp"
            android:text="John Doe"
            android:textSize="18sp"
            android:textStyle="normal" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Email"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:text="johndoe@email.com" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Phone Number"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/phoneNumberTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:text="123-456-7890" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Education Qualification"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/educationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="true"
        android:paddingLeft="8dp"
        android:text="Bachelor of Science in Computer Science" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Work Experience"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/workExperienceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="true"
        android:paddingLeft="8dp"
        android:text="Software Developer, ABC Company (2020 - present)\nDeveloped and maintained web applications using Java and JavaScript." />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Extracurricular Activities"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/extracurricularTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="true"
        android:paddingLeft="8dp"
        android:text="Volunteer at local animal shelter" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Edit" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onSaveButtonClick"
        android:text="Save"
        android:visibility="invisible" />
</LinearLayout>
