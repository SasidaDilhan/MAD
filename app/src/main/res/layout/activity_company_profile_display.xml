<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.company.CompanyProfileDisplay">

    <TextView
        android:id="@+id/welcomettl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Welcome"
        android:textColor="@color/black"
        android:textSize="40sp"
        />


    <TextView
        android:id="@+id/cmpv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name :"
        />
    <TextView
        android:id="@+id/cmp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

    <TextView
        android:id="@+id/cmpv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Mail : "
        />
    <TextView
        android:id="@+id/cmp_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/cmpv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number : "
        />

    <TextView
        android:id="@+id/cmp_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />


    <TextView
        android:id="@+id/cmpv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address :"
        />
    <TextView
        android:id="@+id/cmp_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

    <TextView
        android:id="@+id/cmpv_regiseterNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registraion Number :"
        />
    <TextView
        android:id="@+id/cmp_regiseterNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

    <Button
        android:id="@+id/edt_Cprofile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_preset"
        android:layout_gravity="center"
        android:text="Edit Profile"
        android:textColor="@color/white"
        android:textSize="15sp"
        />
    <Button
        android:id="@+id/dlt_Cprofile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_cancel"
        android:layout_gravity="center"
        android:text="Delete Profile"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        />

</LinearLayout>